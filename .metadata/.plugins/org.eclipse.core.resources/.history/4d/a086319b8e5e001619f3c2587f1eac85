var mi_ventana = Titanium.UI.createWindow({
	backgroundColor : 'red'
});

var mi_view_1 = Titanium.UI.createView({
	backgroundColor : 'green',
	opacity: 0.5,
	width : '100dp',
	height : '100dp'
});

var lbl_1 = Titanium.UI.createLabel({
	text : 'Hola titanium',
	color : 'black'
});

mi_ventana.add(mi_view_1);
mi_view_1.add(lbl_1);
mi_ventana.open();
