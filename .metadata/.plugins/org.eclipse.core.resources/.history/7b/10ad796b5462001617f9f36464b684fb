var win = Titanium.UI.createWindow({
	theme : 'materialThemeNoAB',
	backgroundColor : 'black',
	layout : 'horizontal'
});

var win2 = Titanium.UI.createWindow({
	theme : 'materialThemeNoAB',
	layout : 'vertival'
});

var view_1 = Titanium.UI.createView({
	height : '12%',
	width : Titanium.UI.FILL,
	backgroundColor : 'red',
	layout : 'Absolute'
});

var boton = Titanium.UI.createButton({
	title : 'FAVORITOS',
	width : Titanium.UI.SIZE,
	height : Titanium.UI.SIZE,
	borderRadius : '50dp'
});

view_1.add(boton);

var colores = ['/imgs/ciencia.png', '/imgs/ciencia.png', '/imgs/ciencia.png', '/imgs/deportes.png', '/imgs/ciencia.png', '/imgs/musica.png', '/imgs/ciencia.png', '/imgs/libros.png'];

win.add(view_1);

for (var i = 0; i < 1; i++) {
	var views = Titanium.UI.createImageView({
		height : '22%',
		width : '50%',
		backgroundImage : colores[i]
	});

	win.add(views);
	views.addEventListener('click', function() {

	});
};

win.open();

