//codebeatify.org/XMLviewer

var win = Titanium.UI.createWindow({
	theme : 'materialThemeNoAB',
	backgroundImage : '/imgs/fondo.png',
	layout : 'horizontal'
});

var win2 = Titanium.UI.createWindow({
	theme : 'materialThemeNoAB',
	layout : 'vertival'
});

var view_1 = Titanium.UI.createView({
	height : '12%',
	width : Titanium.UI.FILL,
	layout : 'Absolute'
});

var boton = Titanium.UI.createButton({
	title : 'FAVORITOS',
	width : Titanium.UI.SIZE,
	height : Titanium.UI.SIZE,
	borderRadius : '50dp'
});

view_1.add(boton);

boton.addEventListener('click', function() {
	var wind = Ti.UI.createWindow({
		theme : 'materialThemeNoAB',
		backgroundImage : '/imgs/fondo.png',
		layout : 'vertical'
	});
	var vw = Titanium.UI.createView({
		width : Titanium.UI.FILL,
		height : '15%',
		layout : 'horizontal'
	});
	var lbl1 = Ti.UI.createImageView({
		width : '35%',
		height : '100%',
		backgroundImage : '/imgs/favoritos.png'
	});
	var lbl2 = Ti.UI.createLabel({
		width : '55%',
		height : Titanium.UI.FILL,
		text : 'Favoritos',
		color : 'white',
		left : '10%',
		font : {
			fontSize : 35,
			fontWeight : 'bold'
		}

	});

	vw.add(lbl1);
	vw.add(lbl2);
	wind.add(vw);
	wind.open();
});

var colores = ['/imgs/entretenimiento.png', '/imgs/ciencia.png', '/imgs/cine.png', '/imgs/deportes.png', '/imgs/tecnologia.png', '/imgs/musica.png', '/imgs/salud.png', '/imgs/libros.png'];
var nom = ['Entretenimiento', 'Ciencia', 'Cine', 'Deportes', 'Tecnologia', 'Musica', 'Salud', 'Libros'];
win.add(view_1);

for (var i = 0; i < 8; i++) {
	var views = Titanium.UI.createView({
		height : '22%',
		width : '50%',
		layout : 'vertical'
	});

	var Iviews = Titanium.UI.createImageView({
		height : '70%',
		width : '70%',
		backgroundImage : colores[i]
	});

	var lbls = Titanium.UI.createLabel({
		height : '20%',
		width : '100%',
		color : 'white',
		left : '10%',
		font : {
			fontSize : 20
		},
		text : nom[i]
	});
	views.add(Iviews);
	views.add(lbls);
	win.add(views);

	views.addEventListener('click', function() {
		var window = Ti.UI.createWindow({
			backgroundColor: 'white'
		});
		var xhr = Titanium.Network.createHTTPClient();
		xhr.setTimeout(7000);
		var data = [];
		xhr.onload = function() {
			var des = xhr.responseXML.documentElement.getElementsByTagName("item");
			var doctitle = xhr.responseXML.documentElement.evaluate("//channel/title/text()").item(0).nodeValue;
			var lbl = Titanium.UI.createLabel({
				text : doctitle
			});
			for (var i = 0; i < des.item.length; i++) {
				data.push({
					des2 : des.item(i).getElementsByTagName("title").item(0).text
				});
			}

			var t_mostrar = Titanium.UI.createTableView({
				editable : true
			});
			t_mostrar.setData(data);
			window.add(t_mostrar);
		};
		console.log(JSON.stringify(data));
		xhr.open("GET", "http://archivo.eluniversal.com.mx/rss/universalmxm.xml");
		xhr.send();
		window.open();
	});
};

win.open();

